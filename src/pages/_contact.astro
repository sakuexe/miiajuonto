---
import Blob from "../components/blobs.astro";
import contactInfo from "../data/contactinfo.json";
---

<article
  id="contact"
  class="relative overflow-hidden space-y-8 fade-in opacity-0
  transition-all duration-700 ease-in-out motion-reduce:transition-none"
>
  <div class="container sectionheader">
    <h2>Yhteys&shy;tiedot</h2>
    <p>Ollaan yhteydessä</p>
  </div>
  <div
    id="contact-info"
    class="container flex flex-col gap-x-10 justify-center items-center 
    scroll-from-left translate-x-full transition-all delay-300 ease-in-out duration-700 
    motion-reduce:transition-none sm:flex-row"
  >
    <div
      class="space-y-5 backdrop-blur-xl shadow-lg shadow-neutral-900 p-4 rounded-xl sm:max-w-sm sm:w-2/3 sm:order-last lg:w-auto"
    >
      <p class="opacity-80">
        Lorem ipsum dolor sit amet, consectetur adipisicing elit. Minima quae
        dignissimos atque ut quisquam illo fugit, quos eligendi reprehenderit
        sapiente!
      </p>
      <div class="flex flex-col items-start gap-3">
        {
          contactInfo.map((contact) => (
            <div class="flex gap-x-5 items-center">
              <img
                src={`./icons/${contact.icon}`}
                alt={`kontakti ikoni ${contact.name}:ia varten`}
                class="w-16 aspect-square"
              />
              <a
                href={contact.url}
                target="_blank"
                class="break-words underline-offset-4 transition-all 
              flex items-center gap-x-1
              hover:text-secondary hover:underline"
              >
                {contact.tag}
                <img
                  src="./icons/target-blank.svg"
                  alt=""
                  role="presentation"
                  class="inline-block w-4 stroke-red-500"
                />
              </a>
            </div>
          ))
        }
      </div>
    </div>
    <div
      class="image relative w-full -z-20 self-center scroll-from-bottom translate-y-full 
      transition-all opacity-0 duration-1000 ease-in-out delay-300
      motion-reduce:transition-none sm:w-1/3 md:w-auto"
    >
      <img
        src="images/contact-kuva.png"
        alt="kuva Miiasta hymyilemässä"
        class="mx-auto max-h-[500px] sm:w-full"
      />
      <Blob
        type="contacts"
        className="absolute bottom-0 -left-10 h-5/6 opacity-25 -z-20 \
        sm:-left-1/3"
      />
      <Blob
        type="contacts"
        className="absolute -bottom-8 -right-32 h-full -rotate-[60deg] \
        opacity-10 -z-20 sm:-right-full"
      />
    </div>
  </div>
  <div
    class="absolute w-full h-1/3 -z-10 bottom-0 left-0 bg-gradient-to-t from-primary to-transparent sm:h-2/3"
  >
    <div
      class="absolute w-full h-1/3 -z-10 bottom-0 left-0 bg-gradient-to-t from-primary to-transparent sm:h-1/3"
    >
    </div>
  </div>
</article>
