---
import Blob from "../components/blobs.astro";
import contactInfo from "../data/contactinfo.json";
---

<article class="space-y-5">
  <div class="container sectionheader">
    <h2>Yhteys&shy;tiedot</h2>
    <p>Ollaan yhteydessä</p>
  </div>
  <div class="relative overflow-hidden">
    <img
      src="images/contact-kuva.png"
      alt="kuva Miiasta hymyilemässä"
      class="w-2/3 mx-auto"
    />
    <Blob
      type="contacts"
      className="absolute bottom-0 -left-16 opacity-25 -z-20"
    />
    <Blob
      type="contacts"
      className="absolute -bottom-8 -right-40 -rotate-[70deg] opacity-10 -z-20"
    />
    <div
      class="absolute bottom-0 left-0 w-full h-full bg-gradient-to-t from-primary to-transparent"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-full h-2/3 bg-gradient-to-t from-primary to-transparent"
    >
    </div>
  </div>
  <div class="container space-y-5">
    <p class="opacity-80">
      Lorem ipsum dolor sit amet, consectetur adipisicing elit. Minima quae
      dignissimos atque ut quisquam illo fugit, quos eligendi reprehenderit
      sapiente!
    </p>
    <div class="flex flex-col items-start gap-3">
      {
        contactInfo.map((contact) => (
          <div class="flex gap-x-5 items-center">
            <img
              src={`./icons/${contact.icon}`}
              alt={`kontakti ikoni ${contact.name}:ia varten`}
              class="w-16 aspect-square"
            />
            <a 
              href={contact.url} 
              target="_blank" 
              class="break-words underline-offset-4 transition-all 
              flex items-center gap-x-1
              hover:text-secondary hover:underline">
              {contact.tag}
              <img 
                src="./icons/target-blank.svg" 
                alt="" 
                role="presentation"
                class="inline-block w-4 stroke-red-500"
              >
            </a>
          </div>
        ))
      }
    </div>
  </div>
</article>
