    {
      otherPartners.map((partner) => (
        <div class="inline-block object-contain w-20 aspect-square">
          <img
            class="w-full h-full"
            src={`./businesses/${partner.logo}`}
            alt={`yrityksen ${partner.logo} -logo`}
          />
        </div>
      ))
    }
  </div>
</section>
